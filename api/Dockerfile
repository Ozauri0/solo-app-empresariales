FROM node:20-alpine

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el c칩digo fuente
COPY . .

# Crear directorios necesarios para uploads si no existen
RUN mkdir -p ./public/uploads/news
RUN mkdir -p ./public/uploads/courses
RUN mkdir -p ./public/uploads/course-materials

# Puerto en el que se ejecutar치 la aplicaci칩n
ENV PORT=5005
ENV NODE_ENV=production

# Exponer el puerto
EXPOSE 5005

# Comando para iniciar la aplicaci칩n
CMD ["node", "server.js"]